extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="username", placeholder="username", required, type="text")
        input(name="password", placeholder="password", required, type="password")
        input(type="submit", value="Login")
        include partials/social_login     
    div
        span Don'thave an account?
        a(href="/join") Create Account &rarr;